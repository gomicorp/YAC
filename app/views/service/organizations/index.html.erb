<div id="organization-index-container" class="card shadow border-0">
  <div class="card-header bg-dark py-3 px-4">
    <h1 class="h2 text-white d-inline-block">Organizations</h1>

    <div class="d-inline-flex align-items-center text-white float-right mt-1">
      <%= image_tag current_user.image_url, width: 30, height: 30, class: 'rounded-circle mr-2' %>
      <p class="m-0"><%= current_user.name %></p>
    </div>
  </div>

  <div class="card-body p-4">
    <h2 class="h4 text-center mb-4">
      <%= @organizations.any? ? 'Start with ...' : 'Get start with new organization!' %>
    </h2>

    <% @organizations.each do |organization| %>
      <%= link_to organization_path(organization.id), class: 'btn btn-light w-100 py-3 my-1' do %>
        <span class="float-left invisible">
          <span class="badge bg-dark mr-2"><%= organization.sites.count %></span>
          <span class="text-muted"><span class="far fa-angle-right"></span></span>
        </span>

        <span><%= organization.name %></span>

        <span class="float-right">
          <span class="badge bg-dark mr-2"><%= organization.sites.count %></span>
          <span class="text-muted"><span class="far fa-angle-right"></span></span>
        </span>
      <% end %>
    <% end %>
  </div>
</div>

<br />

<%= link_to 'New Organization', new_organization_path %>
